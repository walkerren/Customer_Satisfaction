<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/zantel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textSize="34dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/toolbar_title"
            android:paddingHorizontal="15dp"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Number"
        android:textSize="30dp"
        android:textColor="@color/colorBlue"
        android:layout_below="@id/toolbar_top"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter X"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:paddingVertical="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of service"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do you rate our services?"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView4"
        android:paddingVertical="0dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Highly Unsatisfactory"
            android:textSize="12dp"
            android:gravity="left"

            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Highly Satisfactory"
            android:textSize="12dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearLayout2"
        android:paddingVertical="10dp"
        >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/marg"
            android:background="@drawable/red_shape"
            android:theme="@style/buttonshape"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/red_shape2"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/red_shape3"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="3" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/red_shape4"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/red_shape5"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/khaki_shape"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="6" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/khaki_shape2"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/khaki_shape3"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/green_shape"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="9" />

        <Button
            android:id="@+id/btn_10"
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/sixty"
            android:layout_weight="1"
            android:background="@drawable/green_shape2"
            android:layout_marginHorizontal="@dimen/marg"
            android:theme="@style/buttonshape"
            android:text="10" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
